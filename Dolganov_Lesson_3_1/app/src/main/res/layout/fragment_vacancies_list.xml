<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/country_content_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aston_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/vacancy_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/office_color"
        android:textCursorDrawable="@null"
        app:iconifiedByDefault="false"
        app:queryBackground="@null" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/list"
    android:name="com.vk.directop.dolganov_lesson_3_1.VacanciesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".VacanciesFragment"
    tools:listitem="@layout/vacancy_item" />
</LinearLayout>