<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="office_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">-6dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_aston_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bottom_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="office_button_del" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">-6dp</item>
        <item name="android:padding">-20dp</item>
        <item name="android:background">@drawable/cities</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_aston_text</item>
        <item name="android:textSize">12sp</item>

    </style>

</resources>